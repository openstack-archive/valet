import os
import sys
import traceback

from oslo_log import log
from oslo_config import cfg

from valet.engine.optimizer.ostro.ostro import Ostro
from valet.engine.optimizer.ostro_server.daemon import Daemon

LOG = log.getLogger(__name__)
CONF = cfg.CONF


class OstroDaemon(Daemon):
    """Daemon for Valet Engine."""

    def run(self):
        """Run the daemon."""
        LOG.info("Valet Engine is launched")
        try:
            ostro = Ostro()
        except Exception:
            LOG.error(traceback.format_exc())

        if ostro.bootstrap() is False:
            LOG.error("Valet Engine bootstrap failed")
            sys.exit(2)

        # Write pidfile
        pid = str(os.getpid())
        file(self.pidfile, 'w+').write("%s\n" % pid)

        ostro.run_ostro()

if __name__ == "__main__":
    # Configuration
    try:
        # Start daemon process
        daemon = OstroDaemon()

        exit_code = {
            'start': daemon.start,
            'stop': daemon.stop,
            'restart': daemon.restart,
            'status': daemon.status,
        }[CONF.engine.command]()
        exit_code = exit_code or 0

    except Exception:
        print(traceback.format_exc())
        exit_code = 2

    sys.exit(int(exit_code))
